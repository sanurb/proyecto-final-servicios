<div class="row">
  <div class="col">
    <h1 class="fw-bold mb-5">User</h1>
    <form action="/update/{{users.id}}" method="POST"></form>
        <div class="row g-3 mb-6">
        
            <div class="col-6">
            <label class="form-label mb-2 fw-bold">Id</label>
            <input type="text" value="{{users.id}}" class="form-control" disabled>
            </div>
            <div class="col-6">
            <label class="form-label mb-2 fw-bold">Name</label>
            <input type="text" value="{{users.nombre}}" class="form-control">
            </div>
            <div class="col-6">
            <label class="form-label mb-2 fw-bold">Email</label>
            <input type="email" value="{{users.email}}" class="form-control" />
            </div>
        
        </div>
    </form>
  </div>
</div>